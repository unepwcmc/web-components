{
  "name": "style-guide",
  "private": true,
  "dependencies": {
    "@rails/webpacker": "^4.0.2",
    "@turf/turf": "~5.0.0",
    "@vue/test-utils": "^1.0.0-beta.28",
    "axios": "^0.18.0",
    "babel-jest": "^24.8.0",
    "d3": "^5.8.2",
    "es6-object-assign": "^1.1.0",
    "es6-promise": "^4.2.6",
    "jest": "^23.6.0",
    "scrollmagic": "^2.0.6",
    "vue": "^2.6.10",
    "vue-jest": "^3.0.4",
    "vue-loader": "^15.7.0",
    "vue-template-compiler": "^2.6.10",
    "vue2-touch-events": "^1.1.1",
    "vuex": "^3.0.1"
  },
  "devDependencies": {
    "webpack-dev-server": "^3.3.1"
  },
  "scripts": {
    "test": "NODE_ENV=test jest --watchAll --verbose=false",
    "build": "RAILS_ENV=production NODE_ENV=production ./bin/webpack",
    "dev": "./bin/webpack-dev-server",
    "serve": "rails s",
    "network-serve": "bash ./scripts/network-serve.sh"
  },
  "jest": {
    "roots": [
      "app/javascript/component-lib"
    ],
    "moduleFileExtensions": [
      "js",
      "json",
      "vue"
    ],
    "moduleDirectories": [
      "node_modules",
      "app/javascript"
    ],
    "transform": {
      "^.+\\.js$": "babel-jest",
      "^.+\\.vue$": "vue-jest"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!(vue.*)/)"
    ]
  }
}
