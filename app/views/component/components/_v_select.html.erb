<%
config_singular = {
  label: 'Singular select',
  id: 'select_0'
}.to_json
config_searchable_singular = {
  label: 'Searchable singular select',
  id: 'select_1'
}.to_json
config_multi = {
  label: 'Multiselect',
  id: 'select_2'
}.to_json
config_searchable_multi = {
  label: 'Searchable multiselect',
  id: 'select_3'
}.to_json
options = [
  { id: 1, name: 'Option 1' },
  { id: 2, name: 'Option 2' },
  { id: 3, name: 'Option 13' },
  { id: 4, name: 'Option 23' },
  { id: 5, name: 'Option 12' },
  { id: 6, name: 'Option 11' }
]
%>


<h2>VSelect</h2>
<div class="<%= styleguide_class %>">
  <v-select :config="<%= config_singular %>" :options="<%= options.to_json %>" :selected="<%= options[3].to_json %>"></v-select>
</div>

<h2>VSelectSearchable</h2>
<div class="<%= styleguide_class %>">
  <v-select-searchable :config="<%= config_searchable_singular %>" :options="<%= options.to_json %>" :selected="<%= options[3].to_json %>"></v-select-searchable>
</div>

<h2>VMultiselect</h2>
<div class="<%= styleguide_class %>">
  <v-multiselect :config="<%= config_multi %>" :options="<%= options.to_json %>" :selected="<%= options[0,2].to_json %>"></v-multiselect>
</div>

<h2>VMultiselectSearchable</h2>
<div class="<%= styleguide_class %>">
  <v-multiselect-searchable :config="<%= config_searchable_multi %>" :options="<%= options.to_json %>" :selected="<%= options[0,2].to_json %>"></v-multiselect-searchable>
</div>
